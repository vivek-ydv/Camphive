<style>
    .dropdown-menu {
        border-radius: 0.5rem;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        animation: fadeInDown 0.3s;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translate3d(0, -20%, 0);
        }
        to {
            opacity: 1;
            transform: none;
        }
    }

    .dropdown-item {
        color: #333;
    }

    .dropdown-item:hover,
    .dropdown-item:focus {
        color: #fff;
        background-color: #007bff;
    }

    .dropdown-divider {
        margin: 0.5rem 0;
    }

    .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .dropdown-toggle::after {
        display: none;
    }
</style>

<!-- Nav Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="fas fa-campground" style="color: #e85d04;"></i> Camphive</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/campgrounds">Campgrounds</a>
                <a class="nav-link" href="/campgrounds/new">New Campground</a>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/about">About</a>
                <% if(!currentUser) { %>
                <a class="nav-link" href="/login">Sign In</a>
                <a class="nav-link active btn btn-primary" href="/register">Join Free</a>
                <% } else { %>
                <div class="dropdown">
                    <a href="#" class="nav-link active dropdown-toggle" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Hi, <%= currentUser.username %> <i class="fas fa-user ms-1"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="/profile/<%= currentUser.username %>">Your Profile</a></li>
                        <li><a class="dropdown-item" href="/profile/<%= currentUser.username %>">Campgrounds</a></li> 
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/logout">Logout</a></li>
                    </ul>
                </div>
                <% } %>
            </div>
        </div>
    </div>
</nav>
