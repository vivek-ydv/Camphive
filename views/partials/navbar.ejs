<style>
    .dropdown-menu {
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.103);
        animation: fadeInDown 0.25s;
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translate3d(0, -20%, 0);
        }

        to {
            opacity: 1;
            transform: none;
        }
    }

    .dropdown-item {
        color: #333;
    }

    .dropdown-item:hover,
    .dropdown-item:focus {
        color: #fff;
        background-color: #007bff;
    }

    .dropdown-divider {
        margin: 0.5rem 0;
    }

    .navbar {
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .dropdown-toggle::after {
        display: none;
    }

    /* Custom styles */
    .nav-link {
        color: #fff;
    }

    .nav-link:hover {
        color: #007bff;
    }

    .dropdown-toggle {
        color: #fff;
        background-color: transparent;
        border: none;
    }

    .dropdown-toggle:hover {
        color: #007bff;
    }

    .dropdown-menu {
        border: none;
        border-radius: 0;
        background-color: #fff;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
    }

    .dropdown-item {
        color: #333;
    }

    .dropdown-item:hover,
    .dropdown-item:focus {
        color: #fff;
        background-color: #007bff;
    }

    .user-icon {
        color: #fff;
        font-size: 1.2rem;
        margin-left: 0.5rem;
    }

    .user-icon:hover {
        color: #007bff;
    }
</style>

<!-- Nav Bar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><i class="fas fa-campground" style="color: #e85d04;"></i> Camphive</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/campgrounds">Campgrounds</a>
                <a class="nav-link" href="/campgrounds/new">New Campground</a>
            </div>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/about">About</a>
                <% if(!currentUser) { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/register">Register</a>
                    <% } else { %>
                        <div class="dropdown">
                            <a href="#" class="nav-link active dropdown-toggle" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Hi, <%= currentUser.username %> <i class="fas fa-user user-icon"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/profile/<%= currentUser.username %>">Your
                                        Profile</a></li>
                                <li><a class="dropdown-item" href="/profile/<%= currentUser.username %>">Campgrounds</a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/logout">Logout</a></li>
                            </ul>
                        </div>
                        <% } %>
            </div>
        </div>
    </div>
</nav>