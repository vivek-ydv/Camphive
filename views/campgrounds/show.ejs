<% layout('/layouts/boilerplate') %>
    <style>
        .card {
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-img-top {
            height: 400px;
            object-fit: cover;
        }

        .card-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-subtitle {
            font-size: 18px;
            color: #888;
            margin-bottom: 20px;
        }

        .card-text {
            margin-bottom: 20px;
        }

        .btn {
            margin-right: 10px;
        }
    </style>
    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <img src="<%= campground.image %>" class="card-img-top" alt="Campground Image">
                    <div class="card-body">
                        <h1 class="card-title mb-4">
                            <%= campground.title %>
                        </h1>
                        <h2 class="card-subtitle mb-4">
                            <%= campground.location %>
                        </h2>
                        <h3 class="card-subtitle mb-4">
                            Price: $<%= campground.price %> per night
                        </h3>
                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <div class="mb-4">
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST"
                                style="display: inline;">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this campground?')">Delete</button>
                            </form>
                        </div>
                        <a href="/campgrounds" class="btn btn-secondary">Back to All Campgrounds</a>
                    </div>
                    <div class="card-footer text-muted">
                        2 Days Ago
                    </div>
                </div>

                <h2>Leave a Review</h2>
                <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="validated-form mb-3"
                    novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="rating">Rating</label>
                        <input class="form-range" type="range" id="rating" min="1" max="5" name="review[rating]">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="body">Review</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>    
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
            </div>
        </div>
    </div>