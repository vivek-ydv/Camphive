<% layout('/layouts/boilerplate') %>
<!-- star rating css -->
<link rel="stylesheet" href="/css/stars.css" type="text/css">

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-7">
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top" alt="Campground Image">
                <div class="card-body">
                    <h1 class="card-title mb-4">
                        <%= campground.title %>
                    </h1>
                    <h2 class="card-subtitle mb-4">
                        <%= campground.location %>
                    </h2>
                    <h3 class="card-subtitle mb-4">
                        Price: $<%= campground.price %> per night
                    </h3>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                    <% if(currentUser && campground.author.equals(currentUser._id)){ %>
                        <div class="mb-4">
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit</a>
                            <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST"
                                style="display: inline;">
                                <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this campground?')">Delete</button>
                            </form>
                            <a href="/campgrounds" class="btn btn-secondary">Back to All Campgrounds</a>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer text-muted">
                    Submitted by <%= campground.author.username %>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-3">
            <% if(currentUser) { %>
                <p class="card-title text-muted">Leave a Review</p>
                <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="validated-form mb-3"
                    novalidate>
                    <div class="mt-3">
                        <fieldset class="starability-heart">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="mb-3">
                        <label class="form-label card-subtitle " for="body">Review Text</label>
                        <textarea class="form-control" name="review[body]" id="body" cols="30" rows="4"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <button class="btn btn-success">Submit</button>
                </form>
            <% } %>

            <div class="card-title text-muted">
               <p>Reviews </p>
            </div>   

            <div class="mb-3 scrollable-container">
                <% for(let review of campground.reviews) { %>
                    <div class="card review-card mb-2">
                        <div class="delete-container">
                            <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE"
                                method="POST">
                                <% if(currentUser && review.author.equals(currentUser._id)){ %>
                                    <button type="submit" class="delete-button">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                <% } %>
                            </form>
                        </div>
                        <div class="card-body">
                            <h5 class="text-muted">
                                <%= review.author.username %>
                            </h5>
                            <div class="starability-result" data-rating="<%= review.rating %>">
                                Rated: <%= review.rating %> stars
                            </div>
                            <p class="card-text mt-3">
                                <%= review.body %>
                            </p>
                        </div>
                    </div>
                <% } %>
                <div class="card-subtitle text-muted mt-4 ms-2">
                    <p>More reviews will appear here :)</p>
                 </div>
            </div>
        </div>
    </div>
</div>

<style>
    .scrollable-container {
        height: fit-content;
        max-height: 450px;
        overflow-y: hidden;
        transition: overflow-y 0.3s ease-in-out;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        border: none;
        border-radius: 10px;
    }

    .scrollable-container:hover {
        border: 2px solid #bdb2b273;
        border-radius: 10px;
        overflow-y: scroll;
    }

    /* Hide the scrollbar */
    .scrollable-container::-webkit-scrollbar {
        width: 0.5em;
        background-color: #ffffff00;
    }

    .scrollable-container::-webkit-scrollbar-thumb {
        background-color: #bdb2b273;
        border-radius: 10px;
        
    }

        
    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-img-top {
        height: 400px;
        object-fit: cover;
    }

    .card-title {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .card-subtitle {
        font-size: 18px;
        color: #888;
        margin-bottom: 20px;
    }

    .card-text {
        margin-bottom: 20px;
        font-size: 17px;
    }

    .btn {
        margin-right: 10px;
    }

    .delete-container {
        position: absolute;
        top: 10px;
        right: 10px;
    }

    .delete-button {
        background: none;
        border: none;
        color: red;
        cursor: pointer;
        font-size: 1.2rem;
    }

    .review-card {
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.3);
        border: none;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease-in-out;
        position: relative;
    }

    .review-card:hover {
        transform: translateY(-2px);
    }

</style>
